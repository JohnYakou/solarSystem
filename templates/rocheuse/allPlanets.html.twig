                            <a 
                            class="btn btn-danger" 
                            href="{{ path('app_pluton_delete',{id: pluton.id}) }}" 
                            onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette planète ?')"
                            >Supprimer</a
                            >

                            <a
                            href="{{ path('app_pluton_edit', { id: pluton.id }) }}"
                            class="btn btn-warning"
                            >Modifier</a
                            >
                        </div>
                    {% endif %}
                    {# FIN EDIT ET DELETE #}
                </div>
            {% endfor %}
        </div>
        {# FIN PLUTON #}
    </div>
</body>
    <br>
{% endblock %}