                    <div class="card-body">
                        <h5 class="text-center card-title"><strong>{{gazeuse.nom}}</strong></h5>

                        <a class="btn btn-primary text-center d-flex justify-content-evenly" href="{{path('app_single_gazeuse', {id:gazeuse.id})}}">En savoir plus</a>
                    </div>

                    {# EDIT ET DELETE #}
                    {% if is_granted ("ROLE_ADMIN") %}
                        <div class="d-flex p-3 justify-content-evenly">

                            <a 
                            class="btn btn-danger" 
                            href="{{ path('app_gazeuse_delete',{id: gazeuse.id}) }}" 
                            onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette planète ?')"
                            >Supprimer</a
                            >

                            <a
                            href="{{ path('app_gazeuse_edit', { id: gazeuse.id }) }}"
                            class="btn btn-warning"
                            >Modifier</a
                            >
                        </div>
                    {% endif %}
                    {# FIN EDIT ET DELETE #}
                </div>
            {% endfor %}
        </div>
        {# FIN PLANETES GAZEUSES #}

        <br><br>

        {# DEBUT PLUTON #}
        <h2 id="pluton" class="text-center text-white">Les anciennes planètes</h2>

        <div class="row">
            {% for pluton in pluton %}
                <div class="card col-md-5 mx-1 mt-5 card-pluton" style="width:25rem">
                    <img class="card-img-top my-3" style="height:350px" src="{{asset('uploads/photo/' ~ pluton.photo)}}">

                    <div class="card-body">
                        <h5 class="text-center card-title"><strong>{{pluton.nom}}</strong></h5>

                        <a class="btn btn-primary text-center d-flex justify-content-evenly" href="{{path('app_single_pluton', {id:pluton.id})}}">En savoir plus</a>
                    </div>

                    {# EDIT ET DELETE #}
                    {% if is_granted ("ROLE_ADMIN") %}
