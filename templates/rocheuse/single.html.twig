{% extends 'base.html.twig' %}

{% block title %}{{rocheuse.nom}}{% endblock %}

{% block body %}
  <section style="background-image:url({{asset('image/soloUniverse.jpg')}}); background-attachment:fixed;">
    <br>
    <h1 class="text-center text-white">{{rocheuse.nom}}</h1>
    <br>

    <div class="container">
      <div class="card mb-3">
        <img src="{{asset('uploads/photo/' ~ rocheuse.photo)}}" class="card-img-top"/>

        <div class="card-body">
          <br>
          <h5 class="card-title text-center">Superficie : {{rocheuse.superficie}}</h5>
          <br>
          <h3 class="text-center">Description</h3>
          <br>
          <p class="card-text">{{rocheuse.description|nl2br}}</p>
        </div>
      </div>
    </div>
{% endblock %}