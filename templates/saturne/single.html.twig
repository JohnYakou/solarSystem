    <br>

    <h1 class="text-center text-danger">{{saturne.nom}}</h1>

    <br>

    <div class="container">
      <div class="card mb-3">
        <img src="{{asset('uploads/photo/' ~ saturne.photo)}}" class="card-img-top"/>

        <div class="card-body">
          {# <h5 class="card-title text-center">Planète : {{saturne.planete}}</h5> #}
          <br>
          <h5 class="card-title text-center">Découvreur : {{saturne.decouvreur}}</h5>
          <h5 class="card-title text-center">Date de découverte : {{saturne.date}}</h5>
          <br>
          <h3 class="text-center">Description</h3>
          <br>
          <p class="card-text ">{{saturne.description|nl2br}}</p>
        </div>
      </div>
    </div>
{% endblock %}