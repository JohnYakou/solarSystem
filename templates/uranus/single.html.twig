{% extends 'base.html.twig' %}

{% block title %}{{uranus.nom}}{% endblock %}

{% block body %}
<h1 class="text-center text-danger">{{uranus.nom}}</h1>

<div class="container">

  <div class="card mb-3">
    <img src="{{asset('uploads/photo/' ~ uranus.photo)}}" class="card-img-top"/>

    <div class="card-body">
        <h5 class="card-title text-center">Planète : {{uranus.planete}}</h5>
        <h5 class="card-title text-center">Découvreur : {{uranus.decouvreur}}</h5>
        <h5 class="card-title text-center">Date de découverte : {{uranus.date}}</h5>
      <h3 class="text-center">Description</h3>
      <p class="card-text">{{uranus.description}}</p>
    </div>
  </div>
{% endblock %}