{% extends 'base.html.twig' %}

{% block title %}{{pluton.nom}}{% endblock %}

{% block body %}
  <section style="background-image:url({{asset('image/soloUniverse.jpg')}}); background-size:cover;">
    <br>
    <h1 class="text-center text-danger">{{pluton.nom}}</h1>
    <br>

    <div class="container">
      <div class="card mb-3">
        <img src="{{asset('uploads/photo/' ~ pluton.photo)}}" class="card-img-top"/>

        <div class="card-body">
          <h5 class="card-title text-center">Superficie : {{pluton.superficie}}</h5>
          <h3 class="text-center">Description</h3>
          <p class="card-text">{{pluton.description}}</p>
        </div>
      </div>
    </div>
{% endblock %}